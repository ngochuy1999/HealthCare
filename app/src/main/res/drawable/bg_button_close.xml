<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true">
    <shape>
        <gradient android:endColor="@color/text_gray" android:startColor="@color/text_gray" />
        <corners android:radius="10dp"/>
    </shape>
</item>
<item android:state_focused="true">
    <shape>
        <gradient android:endColor="@color/colorBackground" android:startColor="@color/colorBackground" />
        <corners android:radius="10dp"/>
    </shape>
</item>
<item>
    <shape>
        <gradient android:endColor="@color/colorBackground" android:startColor="@color/colorBackground" />
        <corners android:radius="10dp"/>
    </shape>
</item>

</selector>