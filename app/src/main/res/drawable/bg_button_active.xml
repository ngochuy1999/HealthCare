<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/layout_margin_40dp"/>
            <solid android:color="@color/black_alpha"/>
            <size android:height="@dimen/layout_margin_40dp"/>
            <padding android:left="@dimen/layout_margin_15dp"
                android:right="@dimen/layout_margin_15dp"
                android:top="@dimen/layout_margin_8dp"
                android:bottom="@dimen/layout_margin_8dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <ripple android:color="@color/colorTextDiscount">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/black_alpha"/>
                    <corners android:radius="@dimen/layout_margin_40dp"/>
                    <size android:height="@dimen/layout_margin_40dp"/>
                    <padding android:left="@dimen/layout_margin_15dp"
                        android:right="@dimen/layout_margin_15dp"
                        android:top="@dimen/layout_margin_8dp"
                        android:bottom="@dimen/layout_margin_8dp"/>
                </shape>
            </item>

            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <solid android:color="@color/black_alpha"/>
                    <corners android:radius="@dimen/layout_margin_40dp"/>
                    <size android:height="@dimen/layout_margin_40dp"/>
                    <padding android:left="@dimen/layout_margin_15dp"
                        android:right="@dimen/layout_margin_15dp"
                        android:top="@dimen/layout_margin_8dp"
                        android:bottom="@dimen/layout_margin_8dp"/>
                </shape>
            </item>
        </ripple>
    </item>

</selector>